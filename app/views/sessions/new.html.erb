<h2>Login Now</h2><br>

<%= form_tag '/login' do |form| %>

<div class="form-group">

    <%= label_tag :email %>
    <%= text_field_tag :email, '', class: 'form-control'  %>

</div>

<div class="form-group">

    <%= label_tag :password %>
    <%= text_field_tag :password, '', class: 'form-control' %>

</div>

<%= submit_tag 'Login', class: 'btn btn-primary' %>
<% end %>